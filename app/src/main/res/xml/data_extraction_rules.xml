<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+.
   Configures what data is included in Cloud Backup and Device-to-Device Transfer.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include everything by default. Cache is automatically excluded. -->
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Same rules for D2D transfer -->
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>